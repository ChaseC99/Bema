<!DOCTYPE HTML>
<html>
    <head>
        <title>Profile | Challenge Council</title>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css" href="/profile.css">
        <link rel="stylesheet" type="text/css" href="/header.css">
        <link rel="shortcut icon" href="/Winston-icon.png" type="image/png">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    </head>

    <body>
        <%- include ../partials/header %>
        <div id="page-container">
            <p>Welcome to your profile, <%= username %>.</p>
            <!-- Turn into form? -->
            <form action="/routes/log-out" method="post">
                <button name="log-out" class="button green">Log out</button>
            </form>
        </div>
        <script>
            // onclick="logoutFunction()"
            function logoutFunction() {
                let req = new XMLHttpRequest();
                req.open("POST", "/routes/log-out");
                req.onload = () => {
                    console.log(req.responseText);
                    if (req.responseText.result == 'redirect') {
                        window.location.replace('http://localhost:5000/login');
                    }
                    //console.log(window.location.host);
                    //window.location.replace(window.location.host + '/login');
                };
                req.send();
            };
        </script>
    </body>
</html>
